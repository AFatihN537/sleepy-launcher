            model: Gtk.StringList {
                strings [
                    "Wine-GE 7-16",
                    "Wine-GE 7-15",
                    "Proton-GE 7-15",
                    "Lutris 7-14"
                ]
            };
        }

        Adw.ActionRow {
            title: "Recommended only";
            subtitle: "Show only recommended wine versions";

            Gtk.Switch {
                valign: center;
                state: true;
            }
        }
    }

    Adw.PreferencesGroup {
        Adw.ExpanderRow {
            title: "Wine-GE";

            Adw.ActionRow {
                title: "7-16";
